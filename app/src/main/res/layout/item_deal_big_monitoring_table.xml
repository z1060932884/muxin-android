<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:orientation="horizontal"
       >
       <TextView
           android:id="@+id/tv_time"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           app:layout_constraintHorizontal_weight="1"
           app:layout_constraintHorizontal_chainStyle="spread_inside"
           android:layout_marginLeft="@dimen/len_16"
           android:gravity="center_vertical"
           android:text="时间"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/tv_buy"
           />

       <TextView
           android:id="@+id/tv_buy"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           app:layout_constraintHorizontal_weight="1"
           app:layout_constraintHorizontal_chainStyle="spread_inside"
           android:layout_marginRight="@dimen/len_14"
           android:text="买入"
           android:gravity="right|center_vertical"
           app:layout_constraintLeft_toRightOf="@+id/tv_time"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/tv_sale"
           />

       <TextView
           android:id="@+id/tv_sale"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           app:layout_constraintHorizontal_weight="1"
           app:layout_constraintHorizontal_chainStyle="spread_inside"
           android:text="卖出"
           android:gravity="right|center_vertical"
           android:layout_marginRight="@dimen/len_14"
           app:layout_constraintLeft_toRightOf="@+id/tv_buy"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/tv_flow_into"
           />


       <TextView
           android:id="@+id/tv_flow_into"
           android:layout_width="0dp"
           android:layout_height="match_parent"
          app:layout_constraintHorizontal_weight="1"
           app:layout_constraintHorizontal_chainStyle="spread_inside"
           android:gravity="right|center_vertical"
           android:text="净流出"
           android:layout_marginRight="@dimen/len_14"
           app:layout_constraintLeft_toRightOf="@+id/tv_sale"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           />

   </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_700"/>
</LinearLayout>