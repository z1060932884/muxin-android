<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tv_real_time_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6428.123"
        android:textSize="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_real_time_change"
        />

    <LinearLayout
        android:id="@+id/ll_real_time_change"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_real_time_price"
        app:layout_constraintBottom_toTopOf="@+id/ll_current_turnover"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_real_time_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-53.232"
            android:layout_weight="1"
            android:textSize="11dp"
            android:singleLine="true"
            android:maxLength="6"
            />
        <TextView
            android:id="@+id/tv_real_time_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0.83%"
            android:textSize="11dp"
            android:singleLine="true"
            android:maxLength="5"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_current_turnover"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_real_time_change"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成交量"
            android:textSize="11dp"

            />
        <TextView
            android:id="@+id/tv_current_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.31亿"
            android:textSize="11dp"
            />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/ll_trend_center_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/ll_current_turnover"
        app:layout_constraintRight_toLeftOf="@+id/ll_trend_right_part"
        android:layout_marginRight="15dp"
        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最    高"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/tv_deal_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6560.160"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最    低"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
            <TextView
                android:id="@+id/tv_deal_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6560.160"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="成交额"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
            <TextView
                android:id="@+id/tv_deal_gross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.28亿"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_trend_right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/ll_trend_center_part"
        app:layout_constraintRight_toRightOf="parent"

        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买 — "
                android:layout_weight="1"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/tv_deal_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6560.160"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖 —  "
                android:layout_weight="1"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/tv_deal_sellout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6560.160"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="费率  "
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/tv_deal_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.2%"
                android:textSize="11dp"
                android:singleLine="true"
                android:maxLength="8"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>