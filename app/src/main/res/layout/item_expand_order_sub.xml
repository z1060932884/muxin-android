<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/len_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <ImageView
        android:id="@+id/iv_linkman_friend_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/grey_500"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:id="@+id/tv_linkman_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_linkman_friend_portrait"
        />
    <TextView
        android:id="@+id/tv_linkman_friend_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_linkman_friend_name"
        app:layout_constraintLeft_toRightOf="@id/iv_linkman_friend_portrait"
        />
    <View
        android:id="@+id/view_space1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@id/tv_linkman_friend_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

</android.support.constraint.ConstraintLayout>