<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_fund_deal_distribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资产成交分布"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_fund_deal_unit"
        />
    <TextView
        android:id="@+id/tv_fund_deal_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单位：人民币"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fund_deal_distribution"
        app:layout_constraintBottom_toTopOf="@+id/pieChart"
        />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fund_deal_unit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_deal_fund_flow"

        />
    <LinearLayout
        android:id="@+id/ll_deal_fund_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/len_20"
        android:gravity="right"
        android:layout_marginRight="@dimen/len_16"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_deal_fund_outflow"
        app:layout_constraintBottom_toTopOf="@+id/tv_deal_fund_flow_trend"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流水："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2268.21万"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_deal_fund_outflow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/len_20"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="@dimen/len_16"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ll_deal_fund_flow"
        app:layout_constraintBottom_toBottomOf="@+id/ll_deal_fund_flow"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流出："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2168.21万"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_deal_fund_flow_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资金流向趋势"
        app:layout_constraintTop_toBottomOf="@+id/ll_deal_fund_flow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lc_real_time"
        android:layout_margin="@dimen/len_20"
        />
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lc_real_time"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/len_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_deal_fund_flow_trend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recycler"
        />

    <!--<com.bin.david.form.core.SmartTable-->
        <!--android:id="@+id/table"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--android:layout_marginLeft="@dimen/len_20"-->
        <!--android:layout_marginRight="@dimen/len_20"-->
        <!--android:visibility="gone"-->
        <!--/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_deal_real_fund_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lc_real_time"
        app:layout_constraintBottom_toTopOf="@+id/tv_recently_fund_flow_into"
        android:layout_marginBottom="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginLeft="@dimen/len_20"
        android:layout_marginRight="@dimen/len_20"
        >
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_recently_fund_flow_into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近五日资金净流入"
        android:textSize="@dimen/len_16"
        android:layout_marginLeft="@dimen/len_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler"
        app:layout_constraintBottom_toTopOf="@+id/barChart"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/len_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recently_fund_flow_into"
        app:layout_constraintBottom_toTopOf="@+id/tv_deal_big_monitoring"
        />

    <TextView
        android:id="@+id/tv_deal_big_monitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成交大单监控"
        android:textSize="@dimen/len_16"
        android:layout_marginLeft="@dimen/len_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart"
        app:layout_constraintBottom_toTopOf="@+id/rv_deal_big_monitoring"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_deal_big_monitoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/len_20"
        android:background="@drawable/shape_item_deal_real_fund_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_deal_big_monitoring"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>